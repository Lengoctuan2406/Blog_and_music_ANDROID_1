<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/adapterLayout_list_resultHotel"
    android:elevation="8dp"
    app:cardCornerRadius="5dp"
    android:layout_width="match_parent"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:layout_marginTop="10dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linearLayout_adapter_resultHotel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_list_resultHotel"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/image_customer_test"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txtprice_list_resultHotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:fontFamily="@font/robotobold"
                android:text="$"
                android:textColor="@color/white"
                android:textSize="40dp"
                android:layout_marginEnd="60dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/price_list_resultHotel"/>
            <TextView
                android:id="@+id/price_list_resultHotel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:fontFamily="@font/robotobold"
                android:text="25"
                android:textColor="@color/white"
                android:textSize="40dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/img_list_resultHotel"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/name_list_resultHotel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="Name's hotel"
            android:fontFamily="@font/robotobold"
            android:textSize="18dp"
            android:textStyle="bold"/>
        <!--        TYPE ROOM-->
        <TextView
            android:id="@+id/typeRoom_list_resultHotel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotoregular"
            android:layout_marginStart="10dp"
            android:text="Type Room"
            android:textSize="16sp"/>
        <!--        STAY DATE-->
        <TextView
            android:id="@+id/stay_list_resultHotel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/robotobold"
            android:layout_marginStart="10dp"
            android:text="2N - 1D"
            android:layout_marginBottom="10dp"
            android:textSize="16sp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>